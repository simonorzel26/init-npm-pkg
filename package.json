{
  "name": "create-package",
  "version": "0.1.0",
  "description": "A modern TypeScript package generator with multiple build tools, linters, and test frameworks",
  "keywords": ["typescript", "package", "generator", "scaffold", "create", "bun", "npm", "vitest"],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/create-package.git"
  },
  "homepage": "https://github.com/yourusername/create-package#readme",
  "bugs": {
    "url": "https://github.com/yourusername/create-package/issues"
  },
  "private": false,
  "type": "module",
  "bin": {
    "create-package": "dist/cli.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "bun build ./src/cli.ts --outdir ./dist --target node --format esm --declaration",
    "dev": "bun build ./src/cli.ts --outdir ./dist --target node --format esm --watch",
    "test": "bun run vitest run",
    "test:watch": "bun run vitest",
    "test:all": "bun run src/testing/runner.ts",
    "test:variants": "bun run src/testing/runner.ts",
    "test:quick": "bun run src/testing/runner.ts --test",
    "test:cli": "bun run src/cli.ts",
    "prepublishOnly": "bun run build",
    "check": "bun --help"
  },
  "dependencies": {
    "prompts": "latest"
  },
  "devDependencies": {
    "@types/node": "latest",
    "@types/prompts": "latest",
    "typescript": "latest",
    "vitest": "latest"
  }
}
