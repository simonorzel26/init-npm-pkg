{
  "name": "create-pkg",
  "version": "1.0.1",
  "description": "A modern TypeScript package generator with multiple build tools, linters, and test frameworks",
  "keywords": [
    "typescript",
    "package",
    "generator",
    "scaffold",
    "create",
    "bun",
    "npm",
    "vitest"
  ],
  "author": "Simon Orzel",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simonorzel26/create-pkg.git"
  },
  "homepage": "https://github.com/simonorzel26/create-pkg#readme",
  "bugs": {
    "url": "https://github.com/simonorzel26/create-pkg/issues"
  },
  "private": false,
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "create-pkg": "dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/cli.js",
      "default": "./dist/cli.js"
    }
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "bun build ./src/cli.ts --outdir ./dist --target node --format esm",
    "dev": "bun build ./src/cli.ts --outdir ./dist --target node --format esm --watch",
    "test": "bun run vitest run",
    "test:watch": "bun run vitest",
    "test:all": "bun run src/testing/runner.ts",
    "test:variants": "bun run src/testing/runner.ts",
    "test:quick": "bun run src/testing/runner.ts --test",
    "test:cli": "bun run src/cli.ts",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "prompts": "latest"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@types/node": "latest",
    "@types/prompts": "latest",
    "typescript": "latest",
    "vitest": "latest"
  }
}
